{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"useNamingConvention": "off"
			},
			"nursery": {
				"noUselessLoneBlockStatements": "off"
			},
			"complexity": {
				"useSimplifiedLogicExpression": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"json": {
		"parser": {
			"allowComments": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 100
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingComma": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 100,
			"quoteProperties": "asNeeded"
		}
	}
}
