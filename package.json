{
  "name": "blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "remix build",
    "dev": "remix dev --manual -c \"pnpm run start\"",
    "start": "wrangler pages dev --compatibility-date=2023-06-21 ./public",
    "typecheck": "tsc",
    "pages:deploy": "bun run build && wrangler pages deploy ./public",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "biome lint --apply ./app",
    "format": "biome format ./app --write",
    "check": "biome check --apply ./app"
  },
  "dependencies": {
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@remix-run/cloudflare": "^2.3.1",
    "@remix-run/cloudflare-pages": "^2.3.1",
    "@remix-run/css-bundle": "^2.3.1",
    "@remix-run/react": "^2.3.1",
    "@vanilla-extract/css": "^1.14.0",
    "@vanilla-extract/sprinkles": "^1.6.1",
    "clsx": "^2.1.0",
    "dedent": "1.5.1",
    "highlight.js": "^11.9.0",
    "hono": "^3.12.9",
    "html-react-parser": "^5.0.7",
    "isbot": "^3.6.8",
    "microcms-js-sdk": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "the-new-css-reset": "^1.11.2",
    "valibot": "^0.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@cloudflare/workers-types": "^4.20230518.0",
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@remix-run/testing": "^2.5.1",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@storybook/test": "^7.6.6",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vanilla-extract/vite-plugin": "^3.9.3",
    "bun-types": "^1.0.15",
    "storybook": "^7.6.6",
    "typescript": "^5.1.0",
    "vite": "^5.0.12",
    "vitest": "^1.0.2",
    "wrangler": "3.8.0"
  }
}
